{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"],
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Recommended",
  "extends": "@tsconfig/recommended/tsconfig.json",
  "module": "commonjs"
}
